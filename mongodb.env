# MongoDB Configuration Environment Variables
# Copy this file to .env and modify the values as needed

# Django Settings
SECRET_KEY=your-secret-key-here
DEBUG=True
ALLOWED_HOSTS=localhost,127.0.0.1

# MongoDB Database Settings
MONGODB_NAME=fraud_detection_db
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USERNAME=
MONGODB_PASSWORD=
MONGODB_AUTH_SOURCE=admin
MONGODB_AUTH_MECHANISM=SCRAM-SHA-1

# Alternative MongoDB Connection String (uncomment if using connection string)
# MONGODB_CONNECTION_STRING=mongodb://localhost:27017/fraud_detection_db

# Production MongoDB Settings (uncomment and modify for production)
# MONGODB_HOST=your-mongodb-server.com
# MONGODB_USERNAME=your-username
# MONGODB_PASSWORD=your-password
# MONGODB_AUTH_SOURCE=admin
